<% if flash.keys[0].to_s == "alert" %>
 <div class='<%= flash.keys[0].to_s %>' >
<% else %>
<div class="alert alert-success" >
<% end %>
    <button type="button" class="close" data-dismiss="alert">&times;</button>
  <% flash.each do |flash| %>
    <% flash[1].each do |inside| %>
      <span><%= inside %></span><br>
    <% end %>
  <% end %>
</div>